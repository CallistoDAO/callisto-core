{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "prettier.configPath": "package.json",
  "solidity.packageDefaultDependenciesContractsDirectory": "src",
  "solidity.packageDefaultDependenciesDirectory": "dependencies",
  "solidity.compileUsingRemoteVersion": "v0.8.30",
  "solidity.formatter": "forge",
  "[solidity]": {
    "editor.defaultFormatter": "JuanBlanco.solidity"
  },
  "solidity.remappings": [
    "@openzeppelin/contracts/=dependencies/@openzeppelin-contracts-5.3.0/",
    "@openzeppelin-contracts-5.3.0/=dependencies/@openzeppelin-contracts-5.3.0/",
    "forge-std-1.9.6/=dependencies/forge-std-1.9.6/src/",
    "@solady/=dependencies/solady-0.1.19/",
    "solady-0.1.19/=dependencies/solady-0.1.19/src/",
    "solmate-6.8.0/=dependencies/solmate-6.8.0/src/"
  ]
}
